<com.android.internal.policy.impl.WeekPadView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_below="@id/weekpad_divider1"
        >
		    <TextView android:text="@android:string/day_of_week_medium_sunday"
				android:gravity="center_horizontal|center_vertical"
				android:layout_gravity="center_vertical"
				android:layout_width="0dip"
				android:layout_weight="1"
				android:layout_height="match_parent"
				android:textColor="#FFF0F0F0"
				android:textSize="16sp"
			/>

			<TextView android:text="@android:string/day_of_week_medium_monday"
				android:gravity="center_horizontal|center_vertical"
				android:layout_gravity="center_vertical"
				android:layout_width="0dip"
				android:layout_weight="1"
				android:layout_height="match_parent"
				android:textColor="#FFF0F0F0"
				android:textSize="16sp"
			/>

			<TextView android:text="@android:string/day_of_week_medium_tuesday"
				android:gravity="center_horizontal|center_vertical"
				android:layout_gravity="center_vertical"
				android:layout_width="0dip"
				android:layout_weight="1"
				android:layout_height="match_parent"
				android:textColor="#FFF0F0F0"
				android:textSize="16sp"
			/>

			<TextView android:text="@android:string/day_of_week_medium_wednesday"
				android:gravity="center_horizontal|center_vertical"
				android:layout_gravity="center_vertical"
				android:layout_width="0dip"
				android:layout_weight="1"
				android:layout_height="match_parent"
				android:textColor="#FFF0F0F0"
